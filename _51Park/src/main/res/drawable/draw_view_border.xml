<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 给View设置下、左、右边框（停车场详情中的收费详情） -->
    <item>
        <shape>

            <!-- 边框颜色 -->
            <solid android:color="#e5e5e5" />
        </shape>
    </item>
   
    <!-- 给View的下 左 右设置8dp的边框 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape>

            <!-- View填充颜色 -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>