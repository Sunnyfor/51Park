<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 包月/计次导航栏底部线条样式 -->
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#ec4f39" />
        </shape>

        <corners
            android:bottomLeftRadius="5dip"
            android:bottomRightRadius="5dip"
            android:topLeftRadius="5dip"
            android:topRightRadius="5dip" />
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="2dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape>
            <stroke
                android:dashGap="0dp"
                android:dashWidth="1dp"
                android:width="1dp"
                android:color="#ec4f39" />

            <solid android:color="#ec4f39" />

            <corners android:radius="5dip" />

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
        </shape>
    </item>

</layer-list>