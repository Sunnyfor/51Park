<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout_Match_Vertical_Style" >

    <!-- 选择日历头部 -->
    <LinearLayout
        style="@style/Layout_Wrap_Horizontal_Style"
        android:layout_margin="15dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_cal_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="label年"
            android:textColor="@color/calendar_blue_font"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_cal_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="label月"
            android:textColor="@color/calendar_blue_font"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="日"
            android:textColor="@color/red_font"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="一"
            android:textColor="@color/calendar_blue_font"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="二"
            android:textColor="@color/calendar_blue_font"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="三"
            android:textColor="@color/calendar_blue_font"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="四"
            android:textColor="@color/calendar_blue_font"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="五"
            android:textColor="@color/calendar_blue_font"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="六"
            android:textColor="@color/red_font"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <View
        style="@style/View_W_Style"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

</LinearLayout>