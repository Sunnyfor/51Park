<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carlease_buy_rl"
    style="@style/Layout_Wrap_Vertical_White_Style" >

    <TextView
        android:id="@+id/start_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:textColor="@color/black_font" />

    <TextView
        android:id="@+id/tv_date_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/start_date_tv"
        android:gravity="center_vertical"
        android:text="当前选择服务开始日期为"
        android:textColor="@color/gray_font" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_date_desc"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/real_price_tv"
            style="@style/TextView_Mine_BeforeItem_Style"
            android:layout_marginRight="10dp"
            android:text="--"
            android:textColor="@color/red_font" />

        <TextView
            android:id="@+id/orig_price_tv"
            style="@style/TextView_Mine_BeforeItem_Style"
            android:layout_marginRight="15dp"
            android:text="--"
            android:textColor="#888888"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@id/finish_btn"
        style="@style/Common_Button_Red_Small_Style"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_date_desc"
        android:layout_centerVertical="true"
        android:text="@string/li_ji_gou_mai" />

</RelativeLayout>