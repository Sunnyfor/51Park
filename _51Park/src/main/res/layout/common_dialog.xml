<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_rl"
    style="@style/Layout_Wrap_Horizontal_Style"
    android:background="@drawable/layerlist_bg_dialog" >

    <!-- 公共对话框 -->

    <RelativeLayout
        android:id="@id/test0_rl"
        style="@style/Layout_Wrap_Horizontal_Alpha_Style"
        android:gravity="center" >

        <!-- 头部标题 -->

        <TextView
            android:id="@id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:visibility="gone" />

        <!-- 主体展示的文字内容 -->

        <TextView
            android:id="@id/content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_tv"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/gray_font" />
    </RelativeLayout>

    <!-- 【横向分割线】 -->

    <View
        android:id="@id/line_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test0_rl"
        android:background="#D9D9D9"
        android:visibility="gone" />

    <!-- 【底部选择按钮】 -->

    <LinearLayout
        style="@style/Layout_Wrap_Horizontal_Alpha_Style"
        android:layout_below="@id/line_view" >

        <!-- 取消按钮 -->

        <Button
            android:id="@id/close_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:textColor="@color/black_font"
            android:visibility="gone" />

        <!-- 按钮间的分割线 -->

        <View
            android:id="@+id/line0_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D9D9D9"
            android:visibility="gone" />

        <!-- 确定按钮 -->

        <Button
            android:id="@id/sure_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:textColor="@color/black_font"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>