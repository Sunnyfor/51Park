<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Wrap_Vertical_Style"
    android:background="@color/gray_title_bg" >

    <!-- 【标题栏】纯界面 -->

    <RelativeLayout
        style="@style/Layout_Wrap_Horizontal_Style"
        android:background="@color/gray_title_bg" >

        <!-- 【返回按钮】 -->

        <LinearLayout
            android:id="@+id/backLLayout"
            style="@style/Layout_Match_Horizontal_Alpha_Style"
            android:layout_width="@dimen/width_click"
            android:gravity="center|left" >

            <ImageView
                android:id="@+id/backImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_right"
                android:contentDescription="@string/back_btn"
                android:src="@drawable/btn_back" />
        </LinearLayout>

        <!-- 【标题文字】 -->

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/px34" />

        <!-- 【右侧图片】 -->

        <LinearLayout
            android:id="@+id/moreLLayout"
            style="@style/Layout_Match_Horizontal_Alpha_Style"
            android:layout_width="@dimen/px340"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical" >

            <ImageView
                android:id="@+id/moreImgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_left_right"
                android:contentDescription="@string/image"
                android:scaleType="centerCrop"
                android:src="@drawable/btn_take_photo"
                android:visibility="gone" />

            <TextView
                android:id="@+id/moreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_left_right"
                android:text="@string/wan_cheng"
                android:textColor="@color/gray_fontbb"
                android:textSize="@dimen/px28"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>