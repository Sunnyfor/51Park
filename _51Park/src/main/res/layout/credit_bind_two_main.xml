<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Match_Vertical_Style"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 【信用卡绑定第二步】界面 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        layout="@layout/common_title" />

    <View style="@style/View_W_Black_Style" />

    <!-- 信用卡布局 -->

    <RelativeLayout
        android:id="@+id/credit_card_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_credit_card" >

        <!-- 银行图标 -->

        <ImageView
            android:id="@+id/credit_bank_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image"
            android:src="@drawable/bg_default_credit" />

        <!-- 银行名称 -->

        <TextView
            android:id="@+id/bank_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/credit_bank_iv"
            android:text="@string/zhao_shang_yin_hang"
            android:textColor="@color/gray_credit" />

        <!-- 卡的芯片图标 -->

        <ImageView
            android:id="@+id/xin_pian_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/credit_bank_iv"
            android:contentDescription="@string/image"
            android:src="@drawable/bg_credit_xinpian" />

        <!-- 卡号第一部分 -->

        <ImageView
            android:id="@id/test1_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xin_pian_iv"
            android:contentDescription="@string/image"
            android:src="@drawable/bg_credit_number" />

        <!-- 卡号第二部分 -->

        <ImageView
            android:id="@id/test2_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/test1_iv"
            android:layout_toRightOf="@id/test1_iv"
            android:contentDescription="@string/image"
            android:src="@drawable/bg_credit_number" />

        <!-- 卡号第三部分 -->

        <ImageView
            android:id="@id/test3_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/test1_iv"
            android:layout_toRightOf="@id/test2_iv"
            android:contentDescription="@string/image"
            android:src="@drawable/bg_credit_number" />

        <!-- 卡号后四位 -->

        <TextView
            android:id="@+id/credit_card_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xin_pian_iv"
            android:layout_toRightOf="@id/test3_iv"
            android:text="@string/ling_dian_ling_ling"
            android:textColor="@color/gray_credit" />

        <!-- 卡类型标识 -->

        <TextView
            android:id="@+id/card_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/xin_yong_ka"
            android:textColor="@color/gray_credit" />
    </RelativeLayout>

    <View
        style="@style/View_W_Style"
        android:layout_marginTop="@dimen/px22" />

    <RelativeLayout style="@style/Common_Item_Layout_Style" >

        <TextView
            android:id="@+id/tv_realname"
            style="@style/Common_Item_Text_Style"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:drawableRight="@null"
            android:text="真实姓名" />

        <cn.com.unispark.define.ClearEditText
            android:id="@+id/et_realname"
            style="@style/Common_Item_Text_Style"
            android:layout_toRightOf="@id/tv_realname"
            android:background="@color/white"
            android:drawableRight="@null"
            android:hint="您的真实姓名"
            android:maxLength="19"
            android:textColor="@color/black_font"
            android:textCursorDrawable="@null" />
    </RelativeLayout>

    <View style="@style/View_W_Style" />

    <RelativeLayout style="@style/Common_Item_Layout_Style" >

        <TextView
            android:id="@+id/tv_identity_card"
            style="@style/Common_Item_Text_Style"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:drawableRight="@null"
            android:text="身 份 证  " />

        <cn.com.unispark.define.ClearEditText
            android:id="@+id/et_identity_card"
            style="@style/Common_Item_Text_Style"
            android:layout_toRightOf="@id/tv_identity_card"
            android:background="@color/white"
            android:drawableRight="@null"
            android:hint="您的身份证号"
            android:maxLength="18"
            android:textColor="@color/black_font"
            android:textCursorDrawable="@null" />
    </RelativeLayout>

    <View style="@style/View_W_Style" />

    <RelativeLayout style="@style/Common_Item_Layout_Style" >

        <TextView
            android:id="@+id/tv_valid_date"
            style="@style/Common_Item_Text_Style"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:drawableRight="@null"
            android:text="有 效 期  " />

        <LinearLayout
            android:id="@+id/iv_valid_date"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/btn_credit_colse" />
        </LinearLayout>

        <TextView
            android:id="@+id/et_valid_date"
            style="@style/Common_Item_Text_Style"
            android:layout_toLeftOf="@id/iv_valid_date"
            android:layout_toRightOf="@id/tv_valid_date"
            android:background="@color/white"
            android:drawableRight="@null"
            android:hint="信用卡有效期"
            android:inputType="number"
            android:textColor="@color/black_font"
            android:textCursorDrawable="@null" />
    </RelativeLayout>

    <View style="@style/View_W_Style" />

    <RelativeLayout style="@style/Common_Item_Layout_Style" >

        <TextView
            android:id="@+id/tv_cnv2"
            style="@style/Common_Item_Text_Style"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:drawableRight="@null"
            android:text="C V N 2" />

        <LinearLayout
            android:id="@+id/iv_cnv2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/btn_credit_colse" />
        </LinearLayout>

        <cn.com.unispark.define.ClearEditText
            android:id="@+id/et_cnv2"
            style="@style/Common_Item_Text_Style"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@id/iv_cnv2"
            android:layout_toRightOf="@id/tv_cnv2"
            android:background="@color/white"
            android:drawableRight="@null"
            android:hint="卡背面最后3位数"
            android:inputType="number"
            android:maxLength="19"
            android:textColor="@color/black_font"
            android:textCursorDrawable="@null" />
    </RelativeLayout>

    <View style="@style/View_W_Style" />

    <View
        style="@style/View_W_Style"
        android:layout_marginTop="15dp" />

    <RelativeLayout style="@style/Common_Item_Layout_Style" >

        <TextView
            android:id="@+id/tv_phone"
            style="@style/Common_Item_Text_Style"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:drawableRight="@null"
            android:text="手 机 号  " />

        <cn.com.unispark.define.ClearEditText
            android:id="@+id/et_phone"
            style="@style/Common_Item_Text_Style"
            android:layout_toRightOf="@id/tv_phone"
            android:background="@color/white"
            android:drawableRight="@null"
            android:hint="银行预留手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/black_font"
            android:textCursorDrawable="@null" />
    </RelativeLayout>

    <View style="@style/View_W_Style" />

    <LinearLayout style="@style/Layout_Wrap_Horizontal_White_Style" >

        <cn.com.unispark.define.ClearEditText
            android:id="@+id/vertifycodeEdit"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/please_input_message"
            android:inputType="number"
            android:textColor="@color/black_font"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

        <View
            style="@style/View_H_Style"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:text="获取验证码"
            android:textColor="@color/green_font"
            android:textSize="15sp" />
    </LinearLayout>

    <View style="@style/View_W_Style" />

    <Button
        android:id="@id/finish_btn"
        
        style="@style/Common_Button_Red_Margin_Style"
        android:layout_marginTop="@dimen/px80"
        android:background="@drawable/btn_common_noselect"
        android:text="@string/wan_cheng_bang_ding"  />

</LinearLayout>