<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Match_Vertical_Style" >

    <!-- 无密支付第二步 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        layout="@layout/common_title" />

    <View style="@style/View_W_Black_Style" />

    <ScrollView style="@style/Layout_Match_Vertical_Style" >

        <LinearLayout style="@style/Layout_Match_Vertical_Style" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_credit_card" >

                <TextView
                    android:id="@+id/bank_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="招商银行"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/card_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="23dp"
                    android:layout_toRightOf="@id/bank_name_tv"
                    android:text="(信用卡)"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/credit_card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bank_name_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="6225 8801 1665 7637"
                    android:textColor="@color/white"
                    android:textSize="23sp" />
            </RelativeLayout>

            <View style="@style/View_W_Style" />

            <RelativeLayout style="@style/Common_Item_Layout_Style" >

                <TextView
                    android:id="@+id/tv_ordernumber"
                    style="@style/Common_Item_Text_Style"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:text="订单编号" />

                <TextView
                    android:id="@+id/ordernumber"
                    style="@style/Common_Item_Text_Style"
                    android:layout_toRightOf="@id/tv_ordernumber"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:hint="1234567890"
                    android:textColor="@color/black_font"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>

            <View style="@style/View_W_Style" />

            <RelativeLayout style="@style/Common_Item_Layout_Style" >

                <TextView
                    android:id="@+id/tv_payfee"
                    style="@style/Common_Item_Text_Style"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:text="支付金额" />

                <TextView
                    android:id="@+id/payfee"
                    style="@style/Common_Item_Text_Style"
                    android:layout_toRightOf="@id/tv_payfee"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:hint="20.00"
                    android:textColor="@color/red_font"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>

            <View style="@style/View_W_Style" />

            <View
                style="@style/View_W_Style"
                android:layout_marginTop="15dp" />

            <RelativeLayout style="@style/Common_Item_Layout_Style" >

                <TextView
                    android:id="@+id/tv_realname"
                    style="@style/Common_Item_Text_Style"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:text="真实姓名" />

                <cn.com.unispark.define.ClearEditText
                    android:id="@+id/et_realname"
                    style="@style/Common_Item_Text_Style"
                    android:layout_toRightOf="@id/tv_realname"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:hint="您的真实姓名"
                    android:singleLine="true"
                    android:textColor="@color/black_font"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>

            <View style="@style/View_W_Style" />

            <RelativeLayout style="@style/Common_Item_Layout_Style" >

                <TextView
                    android:id="@+id/tv_identity_card"
                    style="@style/Common_Item_Text_Style"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:text="身 份 证  " />

                <cn.com.unispark.define.ClearEditText
                    android:id="@+id/et_identity_card"
                    style="@style/Common_Item_Layout_Style"
                    android:layout_toRightOf="@id/tv_identity_card"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:hint="您的身份证号"
                    android:inputType="number"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:textColor="@color/black_font"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>

            <View style="@style/View_W_Style" />

            <RelativeLayout style="@style/Common_Item_Layout_Style" >

                <TextView
                    android:id="@+id/tv_valid_date"
                    style="@style/Common_Item_Text_Style"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:text="有 效 期  " />

                <LinearLayout
                    android:id="@+id/iv_valid_date"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/btn_credit_colse" />
                </LinearLayout>

                <TextView
                    android:id="@+id/et_valid_date"
                    style="@style/Common_Item_Text_Style"
                    android:layout_toLeftOf="@id/iv_valid_date"
                    android:layout_toRightOf="@id/tv_valid_date"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:hint="信用卡有效期"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/black_font"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>

            <View style="@style/View_W_Style" />

            <RelativeLayout style="@style/Common_Item_Layout_Style" >

                <TextView
                    android:id="@+id/tv_cnv2"
                    style="@style/Common_Item_Text_Style"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:text="C V N 2" />

                <LinearLayout
                    android:id="@+id/iv_cnv2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/btn_credit_colse" />
                </LinearLayout>

                <cn.com.unispark.define.ClearEditText
                    android:id="@+id/et_cnv2"
                    style="@style/Common_Item_Text_Style"
                    android:layout_marginLeft="12dp"
                    android:layout_toLeftOf="@id/iv_cnv2"
                    android:layout_toRightOf="@id/tv_cnv2"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:hint="卡背面最后3位数"
                    android:inputType="number"
                    android:maxLength="19"
                    android:singleLine="true"
                    android:textColor="@color/black_font"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>

            <View style="@style/View_W_Style" />

            <View
                style="@style/View_W_Style"
                android:layout_marginTop="15dp" />

            <RelativeLayout style="@style/Common_Item_Layout_Style" >

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/Common_Item_Text_Style"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:text="手 机 号  " />

                <cn.com.unispark.define.ClearEditText
                    android:id="@+id/et_phone"
                    style="@style/Common_Item_Text_Style"
                    android:layout_toRightOf="@id/tv_phone"
                    android:background="@color/white"
                    android:drawableRight="@null"
                    android:hint="银行预留手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/black_font"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>

            <View
                style="@style/View_W_Style"
                android:visibility="gone" />

            <LinearLayout
                style="@style/Layout_Wrap_Horizontal_White_Style"
                android:visibility="gone" >

                <cn.com.unispark.define.ClearEditText
                    android:id="@+id/vertifycodeEdit"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="@string/please_input_message"
                    android:inputType="number"
                    android:textColor="@color/black_font"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp" />

                <View
                    style="@style/View_H_Style"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="获取验证码"
                    android:textColor="@color/green_font"
                    android:textSize="15sp" />
            </LinearLayout>

            <View style="@style/View_W_Style" />

            <Button
                android:id="@+id/bt_finish"
                style="@style/Common_Button_Red_Margin_Style"
                android:layout_marginTop="@dimen/px50"
                android:text="完成绑定并交费" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>