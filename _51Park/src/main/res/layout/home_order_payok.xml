<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_pay_rl"
    style="@style/Layout_Wrap_Horizontal_White_Style" >

    <!-- 情况三：支付成功 -->

    <TextView
        android:id="@id/pay_success_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_home_pay_ok"
        android:gravity="center"
        android:text="@string/zhi_fu_cheng_gong"
        android:textColor="@color/white" />

    <TextView
        android:id="@id/leave_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pay_success_tv"
        android:layout_centerHorizontal="true"
        android:text="@string/shi_shi_wu_fen_qian"
        android:textColor="@color/gray_font" />

    <!-- 订单状态栏显示更多的按钮 -->

    <ImageView
        android:id="@id/more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_more"
        android:contentDescription="@string/image" />

</RelativeLayout>