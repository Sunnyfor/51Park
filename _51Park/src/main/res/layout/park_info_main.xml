<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Match_Vertical_Style" >

    <!-- 【停车场详情页】 -->

    <include
        android:id="@id/title_ic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        layout="@layout/common_title" />

    <View
        android:id="@id/line_view"
        style="@style/View_W_Black_Style"
        android:layout_below="@id/title_ic" />

    <ScrollView
        android:id="@id/scrollview"
        style="@style/Layout_Wrap_Vertical_Style"
        android:layout_below="@id/line_view"
        android:visibility="gone" >

        <LinearLayout style="@style/Layout_Match_Vertical_Alpha_Style" >

            <!-- 【头部】 -->

            <View style="@style/View_W_Top_Style" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/park_info_top" />

            <View style="@style/View_W_Bottom_Style" />

            <!-- 【中部】 -->

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/park_info_body" />
        </LinearLayout>
    </ScrollView>

    <!-- 【底部】导航按钮 -->

    <RelativeLayout
        android:id="@id/nav_rl"
        style="@style/Layout_Wrap_Vertical_White_Style"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@id/nav_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/icon_park_come"
            android:drawablePadding="@dimen/padding_drawable"
            android:gravity="center"
            android:text="@string/qu_zhe_er"
            android:textColor="@color/red_font" />
    </RelativeLayout>

    <View
        android:id="@+id/line10"
        style="@style/View_W_Style"
        android:layout_above="@id/nav_rl" />

    <!-- 地图 -->

    <com.amap.api.maps2d.MapView
        android:id="@id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line10"
        android:layout_below="@id/scrollview"
        android:clickable="false"
        android:visibility="gone" />
    
    <!-- 地图截屏部分 -->
