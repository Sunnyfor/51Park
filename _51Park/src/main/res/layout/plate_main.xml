<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout_Match_Vertical_Style" >

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        layout="@layout/common_title" />

    <View style="@style/View_W_Black_Style" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" >

        <cn.com.unispark.fragment.mine.plate.view.SwipeMenuListView
            android:id="@id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/px20"
            android:divider="#00000000"
            android:dividerHeight="@dimen/px20"
            android:listSelector="#00000000" />
    </FrameLayout>

    <!-- 添加车牌 -->

    <View style="@style/View_W_Style" />

    <LinearLayout
        android:id="@+id/plate_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:background="@drawable/draw_item_bg"
        android:gravity="center_horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableLeft="@drawable/icon_add_plate"
            android:drawablePadding="@dimen/padding_drawable"
            android:gravity="center"
            android:text="@string/tian_jia_che_pai"
            android:textColor="@color/black_font"
            android:textSize="@dimen/px32" />
    </LinearLayout>

</LinearLayout>