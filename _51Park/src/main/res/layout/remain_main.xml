<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout_Match_Vertical_White_Style" >

    <!-- 【账户余额】界面 -->

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        layout="@layout/common_title" />

    <View style="@style/View_W_Black_Style" />

    <!-- 余额图标 -->

    <ImageView
        android:id="@+id/remain_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/image"
        android:src="@drawable/icon_user_remain" />

    <!-- 余额 -->

    <TextView
        android:id="@+id/tv_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/ling_dian_ling_ling"
        android:textColor="@color/black_font" />

    <!-- 充值按钮 -->

    <Button
        android:id="@id/finish_btn"
        style="@style/Common_Button_Red_Margin_Style"
        android:text="@string/chong_zhi" />

</LinearLayout>