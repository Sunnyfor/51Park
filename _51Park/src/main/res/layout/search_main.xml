<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Layout_Match_Vertical_Style" >

    <!-- 【车位搜索】界面 -->

    <RelativeLayout
        android:id="@id/title_rl"
        style="@style/Layout_Wrap_Horizontal_Style"
        android:layout_height="@dimen/px88"
        android:background="@color/gray_title_bg" >

        <!-- 【返回按钮】 -->

        <LinearLayout
            android:id="@id/back_ll"
            style="@style/Layout_Match_Horizontal_Alpha_Style"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/back_btn"
                android:src="@drawable/btn_back" />
        </LinearLayout>

        <!-- 搜索框 -->

        <cn.com.unispark.define.ClearEditText
            android:id="@id/search_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/backLLayout"
            android:background="@drawable/bg_search"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="@dimen/padding_drawable"
            android:hint="@string/bai_hui_yi_bo_ting_che"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black_font"
            android:textSize="16sp" />

        <!-- 搜索按钮 -->

        <LinearLayout
            android:id="@id/search_ll"
            style="@style/Layout_Match_Horizontal_Alpha_Style"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/sou_suo"
                android:textColor="@color/red_font" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@id/line_view"
        style="@style/View_W_Black_Style"
        android:layout_below="@id/title_rl" />

    <!-- 搜索记录 -->

    <ListView
        android:id="@+id/search_lv"
        style="@style/Common_ListView_Style"
        android:layout_below="@id/line_view" />

    <TextView
        android:id="@id/data_null_tv"
        style="@style/Common_TextView_Style"
        android:text="当前没有搜索记录"
        tools:ignore="HardcodedText" />

</RelativeLayout>