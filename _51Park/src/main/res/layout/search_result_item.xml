<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout_Match_Horizontal_White_Style"
    android:layout_height="60dp" >

    <!-- 【搜索结果】的子条目 -->


    <!-- 搜索图标 -->

    <ImageView
        android:id="@id/test0_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin15dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_search" />

    <!-- 到这去的箭头 -->

    <ImageView
        android:id="@id/more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin15dp"
        android:layout_marginRight="@dimen/margin15dp"
        android:contentDescription="@null"
        android:src="@drawable/icon_search_come" />

    <!-- 搜索目的地的名称 -->

    <TextView
        android:id="@+id/search_name_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/more_iv"
        android:layout_toRightOf="@id/test0_iv"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/bai_hui_yi_bo_ting_che"
        android:textColor="#222222"
        android:textSize="18sp" />

    <!-- 目的地所在的行政管理区 -->

    <TextView
        android:id="@+id/search_district_text"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/search_name_text"
        android:layout_below="@id/search_name_text"
        android:layout_toLeftOf="@id/more_iv"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/yi_hai_da_sha_xue_yuan_lu"
        android:textColor="#888888"
        android:textSize="15sp" />

    <View
        style="@style/View_W_Style"
        android:layout_below="@id/search_district_text" />

</RelativeLayout>