<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_verify_code"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/uubee_dialog_bg_title" >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ico_baozi" />

        <TextView
            android:id="@+id/title_verify_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/iv_logo"
            android:text="@string/uubee_dialog_title_verify_code"
            android:textColor="#006970"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_credit_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_verify_phone"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_logo"
            android:text="@string/uubee_dialog_subtitle_verify_code"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/uubee_ic_close" />
    </RelativeLayout>

    <View
        android:id="@+id/v_line_0"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@id/title"
        android:layout_alignRight="@id/title"
        android:layout_below="@id/title"
        android:background="#68a3ba" />

    <View
        android:id="@+id/v_line_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@id/title"
        android:layout_alignRight="@id/title"
        android:layout_below="@id/v_line_0"
        android:background="#cccccf" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title"
        android:layout_alignRight="@id/title"
        android:layout_below="@id/v_line_1"
        android:background="@drawable/uubee_bg_content_activate"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/uubee_bg_edit_text"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:textColor="@color/black_font"
                android:hint="@string/uubee_tip_input_verify_code"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textSize="12sp" />

            <View
                android:id="@+id/msg_verify_divider"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/uubee_divider_activate" />

            <TextView
                android:id="@+id/get_msg_verify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/uubee_get_again"
                android:textColor="#008f98"
                android:textSize="13sp" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout><!-- From: file:/E:/workspace/PrepayDemo/prepay/src/main/res/layout/uubee_activity_repeat_pay.xml -->
