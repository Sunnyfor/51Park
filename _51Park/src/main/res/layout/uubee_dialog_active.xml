<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black">
    <TextView
        android:id="@+id/tv_dialog_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pay_top_tip_height"
        android:layout_below="@id/layout_activity_title"
        android:background="@color/yellow_ffface"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:text="@string/pay_no_pass_tip_text"
        android:textColor="@color/black_666666"
        android:textSize="11sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/credit_account_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_alignLeft="@+id/credit_account_layout"
        android:layout_alignRight="@+id/credit_account_layout"
        android:layout_marginBottom="2dp"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="10sp"/>
    <RelativeLayout
        android:id="@+id/credit_account_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/credit_account_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_card_active"
        android:paddingLeft="12dp">
        <TextView
            android:id="@+id/title_verify_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/credit_account"
            android:textColor="@android:color/white"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/tv_credit_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_verify_phone"
            android:layout_marginTop="30dp"
            android:text="@string/credit_money_remain"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/credit_account_layout"
        android:layout_alignLeft="@+id/credit_account_layout"
        android:layout_marginLeft="12dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <com.uubee.prepay.view.CircleButton
        android:id="@+id/account_active_button"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignRight="@id/credit_account_layout"
        android:layout_alignTop="@id/credit_account_layout"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/uubee_btn_active"
        circle:cb_color="#ffffff"
        circle:cb_duration="800"
        circle:cb_pressedRingWidth="12dip"/>
    <View
        android:id="@+id/account_active_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/account_active_button"
        android:layout_alignLeft="@+id/account_active_button"
        android:layout_alignRight="@+id/account_active_button"
        android:layout_alignTop="@+id/account_active_button"/>
</RelativeLayout>
