<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black" >

    <TextView
        android:id="@+id/tv_dialog_top"
        style="@style/MarketingTop"
        android:layout_below="@id/layout_activity_title" />

    <RelativeLayout
        android:id="@+id/dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/uubee_dialog_bg_title"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/title_verify_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/uubee_dialog_title_verify_name"
                android:textColor="#006970"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_credit_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_verify_phone"
                android:layout_marginTop="5dp"
                android:text="@string/uubee_credit_account"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:id="@+id/v_line_0"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@id/title"
            android:layout_alignRight="@id/title"
            android:layout_below="@id/title"
            android:background="#68a3ba" />

        <View
            android:id="@+id/v_line_1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@id/title"
            android:layout_alignRight="@id/title"
            android:layout_below="@id/v_line_0"
            android:background="#cccccf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_alignRight="@id/title"
            android:layout_below="@id/v_line_1"
            android:background="@drawable/uubee_bg_content_activate"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/tv_tip_verify_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="18dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="@string/uubee_tip_verify_name"
                android:textColor="@color/black_333333"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_name"
                style="@style/DialogEditText"
                android:enabled="false"
                android:hint="@string/info_input_real_name" />

            <com.uubee.prepay.view.SoftCloseEditText
                android:id="@+id/et_id_card"
                style="@style/DialogEditText"
                android:layout_marginTop="10dp"
                android:enabled="false"
                android:hint="@string/info_input_real_id" />

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="18dp"
                android:drawableLeft="@drawable/uubee_ic_agree"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="@string/agreement_declare"
                android:textColor="@color/black_666666"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_activate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/uubee_btn_activate2"
                android:singleLine="true"
                android:text="@string/uubee_to_pay"
                android:textColor="@drawable/uubee_white_button_text"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dialog_above"
        style="@style/MarketingAbove"
        android:layout_alignLeft="@id/dialog"
        android:layout_alignRight="@id/dialog"
        android:layout_below="@id/dialog"
        android:layout_marginTop="5dp"
        android:gravity="center" />

</RelativeLayout><!-- From: file:/E:/workspace/PrepayDemo/prepay/src/main/res/layout/uubee_dialog_verify_name.xml -->
