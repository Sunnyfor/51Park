<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black" >

    <TextView
        android:id="@+id/tv_dialog_top"
        style="@style/MarketingTop"
        android:layout_below="@id/layout_activity_title" />

    <RelativeLayout
        android:id="@+id/dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/uubee_dialog_bg_title"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/title_verify_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/uubee_dialog_title_verify_phone"
                android:textColor="#006970"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_credit_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_verify_phone"
                android:layout_marginTop="5dp"
                android:text="@string/uubee_dialog_slogan"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:id="@+id/v_line_0"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@id/title"
            android:layout_alignRight="@id/title"
            android:layout_below="@id/title"
            android:background="#68a3ba" />

        <View
            android:id="@+id/v_line_1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignLeft="@id/title"
            android:layout_alignRight="@id/title"
            android:layout_below="@id/v_line_0"
            android:background="#cccccf" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_alignRight="@id/title"
            android:layout_below="@id/v_line_1"
            android:background="@drawable/uubee_bg_content_activate"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="24dp" >

            <EditText
                android:id="@+id/et_phone"
                style="@style/DialogEditText"
                android:hint="@string/uubee_hint_phone"
                android:inputType="phone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/uubee_bg_edit_text"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_verify_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/input_msg_verify_tip"
                    android:inputType="number"
                    android:paddingLeft="10dp"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/msg_verify_divider"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@color/uubee_divider_activate" />

                <TextView
                    android:id="@+id/get_msg_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/get_msg_verify_code"
                    android:textColor="#008f98"
                    android:textSize="13sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_activate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/uubee_btn_activate2"
                android:singleLine="true"
                android:text="@string/uubee_next"
                android:textColor="@drawable/uubee_white_button_text"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dialog_above"
        style="@style/MarketingAbove"
        android:layout_alignLeft="@id/dialog"
        android:layout_alignRight="@id/dialog"
        android:layout_below="@id/dialog"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:visibility="gone" />

</RelativeLayout><!-- From: file:/E:/workspace/PrepayDemo/prepay/src/main/res/layout/uubee_dialog_verify_phone.xml -->
