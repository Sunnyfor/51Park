<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/gray_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_dedee3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/input_verify_code_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_msg_verify_tip"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="18dp"
            android:textColor="@color/gray_light_text"
            android:textColorHint="@color/gray_939393"
            android:textSize="13sp" />

        <View
            android:id="@+id/msg_verify_divider"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/uubee_divider_color" />

        <TextView
            android:id="@+id/get_msg_verify_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/get_msg_verify_code"
            android:textColor="@color/gray_light_text"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_dedee3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/white" />

</LinearLayout> <!-- From: file:/E:/workspace/PrepayDemo/prepay/src/main/res/layout/msg_verify_layout.xml -->
