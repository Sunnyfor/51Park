<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="27dp"
    android:paddingRight="27dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/product_name_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_line_high_20"
            android:layout_weight="1"
            android:text="@string/product_name"
            android:textSize="11sp"
            android:textColor="@color/black_666666"/>
        <TextView
            android:id="@+id/product_name_content"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_line_high_20"
            android:layout_weight="1"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/gray_light_text"
            android:textSize="11sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/payee_company_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_line_high_20"
            android:layout_weight="1"
            android:text="@string/payee_company"
            android:textSize="11sp"
            android:textColor="@color/black_666666"/>
        <TextView
            android:id="@+id/payee_company_content"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_line_high_20"
            android:layout_weight="1"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/gray_light_text"
            android:textSize="11sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/transaction_id_title"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_line_high_20"
            android:layout_weight="1"
            android:text="@string/transaction_id"
            android:textSize="11sp"
            android:textColor="@color/black_666666"/>
        <TextView
            android:id="@+id/transaction_id_content"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_line_high_20"
            android:layout_weight="1"
            android:gravity="end"
            android:singleLine="true"
            android:textColor="@color/gray_light_text"
            android:textSize="11sp"/>
    </LinearLayout>
</LinearLayout>
