<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/info_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black_333333"
            android:textSize="11sp"/>
        <EditText
            android:id="@+id/info_detail_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="@dimen/text_title_size"/>
        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:scaleType="center"
            android:src="@drawable/uubee_ic_lock"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:background="@color/uubee_divider_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_shadow_height"
        android:background="@android:color/white"/>
</LinearLayout><!-- From: file:/E:/workspace/PrepayDemo/prepay/src/main/res/layout/specific_info_detail_layout.xml -->